<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.RadioButton?>
<BorderPane xmlns="https://javafx.com/javafx"
            xmlns:fx="https://javafx.com/fxml"
            fx:controller="com.example.ltriviagame.TriviaController">
    <center>
            <VBox alignment="CENTER" spacing="10" padding="20 20 20 20">
                <Label fx:id="questionLabel" style="-fx-font-size:22pt;"/>
                <ImageView fx:id="imageView" fitWidth="400" fitHeight="300"/>
                <HBox alignment="CENTER" spacing="10">
                    <RadioButton text="option1/>"/>
                    <RadioButton text="option2/>"/>
                    <RadioButton text="option3/>"/>
                    <RadioButton text="option4/>"/>

                </HBox>
                <Button fx:id="submitButton" text="Submit" />
            </VBox>
    </center>
</BorderPane>
